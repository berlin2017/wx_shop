
  <view class="swiper-tab" style='position:fixed;z-index:1000000;'>
    <view wx:for="{{cat_list}}" wx:for-item="cat">
      <view class="swiper-tab-list {{currentTab==index ? 'on' : ''}}" data-current="{{index}}" bindtap="swichNav">{{cat.name}}</view>
    </view>
  </view>

  <view class='swip-content' style='display:none;'>
    <block wx:for="{{cat_list}}" wx:for-item="cat" wx:for-index="itemIndex">
      <view wx:if="{{currentTab==itemIndex}}">
        <image src='{{cat.pic_url}}' mode='scaleToFill' style='width:100%;height:140px;'></image>
        <view class='item_layout' wx:for="{{cat.goods_list}}" wx:for-item="goods" style='height:{{x*0.3+20}}px' bindtap='toDetail' data-id='{{goods.id}}'>
          <image class='item_image' src='{{goods.pic_url}}' mode='scaleToFill' style='height:{{x*0.3}}px'></image>
          <view class='item_content'>
            <view class='goods_name'>{{goods.name}}</view>
            <view class='goods_remake'></view>
            <view class='goods_price'>￥{{goods.price}}</view>
          </view>
          <view style='position:relative;float:right;bottom:10px;'>
            <view style='background:black;height:20px;width:20px;border-radius:10px;color:white;text-align:center;float:left;margin-right:10px;' wx:if="{{goods.number&&goods.number>0}}" catchtap='cut' data-index='{{index}}' data-item_index='{{itemIndex}}'>-</view>
            <view style='float:left;' wx:if="{{goods.number&&goods.number>0}}">{{goods.number}}</view>
            <view style='background:black;height:20px;width:20px;border-radius:10px;color:white;text-align:center;float:left;margin-left:10px;' catchtap='add' data-index='{{index}}' data-item_index='{{itemIndex}}'>+</view>
          </view>
        </view>
      </view>

    </block>

  </view>

  <swiper style='width:100%;height:100%;z-index:1000;padding-top:100rpx;'bindchange='changeIndex' current='{{currentTab}}'>
   <block wx:for="{{cat_list}}" wx:for-item="cat" wx:for-index="itemIndex">
      <swiper-item >
        <image src='{{cat.pic_url}}' mode='scaleToFill' style='width:100%;height:140px;'></image>
        <view class='item_layout' wx:for="{{cat.goods_list}}" wx:for-item="goods" style='height:{{x*0.3+20}}px' bindtap='toDetail' data-id='{{goods.id}}'>
          <image class='item_image' src='{{goods.pic_url}}' mode='scaleToFill' style='height:{{x*0.3}}px'></image>
          <view class='item_content'>
            <view class='goods_name'>{{goods.name}}</view>
            <view class='goods_remake'></view>
            <view class='goods_price'>￥{{goods.price}}</view>
          </view>
          <view style='position:relative;float:right;bottom:10px;'>
            <view style='background:black;height:20px;width:20px;border-radius:10px;color:white;text-align:center;float:left;margin-right:10px;' wx:if="{{goods.number&&goods.number>0}}" catchtap='cut' data-index='{{index}}' data-item_index='{{itemIndex}}'>-</view>
            <view style='float:left;' wx:if="{{goods.number&&goods.number>0}}">{{goods.number}}</view>
            <view style='background:black;height:20px;width:20px;border-radius:10px;color:white;text-align:center;float:left;margin-left:10px;' catchtap='add' data-index='{{index}}' data-item_index='{{itemIndex}}'>+</view>
          </view>
        </view>
      </swiper-item >

    </block>

  </swiper>